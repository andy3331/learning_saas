<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center"> 
    <div class="well well-sm">
      <% if params[:plan] == '2' %>
        <h2>Pro Account</h2>
        <p>Get access to the DevMatch community and contact information for only $10/Month</p>
      <% else %>
        <h2>Basic Account</h2>
        <p>Sign up for free and get basic access to the community.</p>
      <% end %>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
        <%# created _pro_form.html.erb and _pro_form.html.erb under registrations...those partials are rendered using syntax below %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
   
